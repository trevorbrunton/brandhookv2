generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Plan {
  FREE
  PRO
}

model User {
  id                  String   @id @default(cuid()) @map("_id")
  externalId          String?  @unique
  quotaLimit          Int
  plan                Plan     @default(FREE)
  email               String   @unique
  apiKey              String   @unique @default(cuid())
  discordId           String?
  collections         String[]
  defaultCollectionId String
  createDate          DateTime @default(now())
  updateDate          DateTime @updatedAt

  @@index([email, apiKey])
  @@map("users")
}

model Collection {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String

  userEmail         String
  collectionName    String
  collectionDetails String
  users             String[]
  memories          String[]
  events            String[]
  places            String[]
  people            String[]
  createDate        String
  updateDate        String

  @@map("collections")
}

model Memory {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @unique
  title       String
  fileUrl     String? // Optional field
  docType     String
  createDate  String
  updateDate  String
  collections String[]
  //Optional fields
  people      String[]
  event       String?
  place       String?

  @@map("memories")
}

model Person {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String  @unique
  name        String
  createDate  String
  updateDate  String
  //Optional fields
  dateOfBirth String?
  memories    String[]
  events      String[]
  places      String[]

  @@map("people")
}

model Events {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String  @unique
  name        String
  createDate  String
  updateDate  String
  //Optional fields
  dateOfEvent String?
  memories    String[]
  people      String[]
  place      String?

  @@map("events")
}

model Place {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String  @unique
  name        String
  createDate  String
  updateDate  String
  //Optional fields
  geolocation String?
  memories    String[]
  people      String[]
  events      String[]

  @@map("places")
}