generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Plan {
  FREE
  PRO
}

model User {
  id                  String   @id @default(cuid()) @map("_id")
  externalId          String?  @unique
  quotaLimit          Int
  plan                Plan     @default(FREE)
  email               String   @unique
  apiKey              String   @unique @default(cuid())
  discordId           String?
  collections         String[]
  defaultCollectionId String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([email, apiKey])
  @@map("users")
}

model Collection {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String

  userEmail         String
  collectionName    String
  collectionDetails String
  users             String[]
  memories          String[]
  createDate        String
  updateDate        String

  @@map("collections")
}

model Memory {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  userId       String      @unique
  title        String
  fileUrl      String? // Optional field
  docType      String
  collections String[]      
  createDate   String
  updateDate   String


  @@map("memories")
}
