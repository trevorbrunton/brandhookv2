generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Plan {
  FREE
  PRO
}

model User {
  id         String   @id @default(cuid()) @map("_id")
  externalId String?  @unique
  quotaLimit Int
  plan       Plan     @default(FREE)
  email      String   @unique
  apiKey     String   @unique @default(cuid())
  discordId  String?
  projects   String[]
  createDate DateTime @default(now())
  updateDate DateTime @updatedAt

  @@index([email, apiKey])
  @@map("users")
}

model Collection {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String

  userEmail         String
  collectionName    String
  collectionDetails String
  users             String[]
  memories          String[]
  events            String[]
  places            String[]
  people            String[]
  createDate        String
  updateDate        String

  @@map("collections")
}

model Memory {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @unique
  title       String
  fileUrl     String? // Optional field
  docType     String
  createDate  String
  updateDate  String
  collections String[]
  //Optional fields
  people      String[]
  things      String[]
  event       String?
  place       String?

  @@map("memories")
}

model Project {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  projectId        String
  userId           String
  projectName      String
  projectDetails   String
  projectDocuments String[]
  createDate       String
  updateDate       String

  @@map("projects")
}

model ProjectDocument {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  projectDocumentId String
  projectId         String
  title             String
  interviewee       String?
  interviewDate     String?
  conversationName  String?
  content           String?
  fileUrl           String?
  docType           String
  createDate        String
  updateDate        String

  @@map("project_documents")
}
